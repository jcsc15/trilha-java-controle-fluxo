		int numero2 = sc.nextInt();
	}
	
	static void contar(int numero1, int numero2) throws ParametrosInvalidosException{
		
		if(numero1 > numero2) {
		throw new ParametrosInvalidosException();
		}
		
		int contagem = numero2 - numero1;
		
		for(int n = 0; n < contagem; n++ ) {
			
		}
	}
	

}
